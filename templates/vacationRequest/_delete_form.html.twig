<form class="delete-btn" method="post" action="{{ deletePath }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cet élement?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vacationRequest.id) }}">
    <button class="btn btn-danger" data-toggle="tooltip" title="Supprimer"><i class="fa fa-trash-o"></i></button>
</form>
