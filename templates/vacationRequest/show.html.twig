{% extends 'baseBack.html.twig' %}

{% block title %}Détail demandes de congés et absences{% endblock %}

{% block body %}
    <h3>Détail demandes de congés et absences</h3>
    

    <table class="table">
        <tbody>
            <tr>
                <th>Salarié</th>
                <td>{{ vacationRequest.user.firstName }} {{ vacationRequest.user.lastName }}</td>
            </tr>
            <tr>
                <th>Début</th>
                <td>{{ vacationRequest.startAt ? vacationRequest.startAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ vacationRequest.endAt ? vacationRequest.endAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Type d'absence</th>
                <td>{{ vacationRequest.vacationType.name }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ vacationRequest.requestStatus.name }}</td>
            </tr>
            <tr>
                <th>Commentaire de l'utilisateur</th>
                <td>{{ vacationRequest.userComment }}</td>
            </tr>
            <tr>
                <th>Commentaire du manager</th>
                <td>{{ vacationRequest.managerComment }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ vacationRequest.createdAt ? vacationRequest.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('vacation_request_index') }}">back to list</a>

    <a href="{{ path('vacation_request_edit', {'id': vacationRequest.id}) }}">edit</a>

    {{ include('vacationRequest/_delete_form.html.twig') }}
{% endblock %}
