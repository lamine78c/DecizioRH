{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo pull-left">
            <img src="{{ asset('images/logo-cooprh.png') }}" height="54" alt="logo" />
        </a>
        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Connexion</h2>
            </div>
            <div class="panel-body">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <div class="form-group mb-lg">
                        <label>Email ou identifiant</label>
                        <div class="input-group input-group-icon">
                            <input value="{{ last_username }}" name="usernameOrEmail" id="inputUsernameOrEmail" type="text" class="form-control input-lg" required/>
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-user"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group mb-lg">
                        <div class="clearfix">
                            <label class="pull-left">Mot de passe</label>
                            <a href="{{ path('forgotten_password') }}" class="pull-right">Mot de passe oubli√© ?</a>
                        </div>
                        <div class="input-group input-group-icon">
                            <input name="password" id="inputPassword" type="password" class="form-control input-lg" required />
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                    <div class="col-sm-12 text-right">
                        <button type="submit" class="btn btn-primary hidden-xs">Se connecter</button>
                        <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
