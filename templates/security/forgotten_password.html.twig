{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo pull-left">
                <img src="{{ asset('images/logo-cooprh.png') }}" height="54" alt="logo" />
            </a>

            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Mot de passe oublié</h2>
                </div>
                <div class="panel-body">
                    <div class="alert alert-info">
                        <p class="m-none text-semibold h6">Entrez votre e-mail ci-dessous et nous vous enverrons des instructions de réinitialisation !</p>
                    </div>
                    <form method="post">
                        <div class="form-group mb-none">
                            <div class="input-group">
                                <input type="email" name="email" id="inputEmail" placeholder="E-mail" class="form-control input-lg" />
                                <span class="input-group-btn">
										<button class="btn btn-primary btn-lg" type="submit">Valider</button>
									</span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}