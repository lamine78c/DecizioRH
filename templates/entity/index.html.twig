{% extends 'baseBack.html.twig' %}

{% block title %}Entity index{% endblock %}

{% block content %}
    <h1>Entity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Shortcut</th>
                <th>Description</th>
                <th>StartAt</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>ClosedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.shortcut }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.startAt ? entity.startAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ entity.createdAt ? entity.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ entity.updatedAt ? entity.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ entity.closedAt ? entity.closedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('entity_show', {'id': entity.id}) }}">show</a>
                    <a href="{{ path('entity_edit', {'id': entity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entity_new') }}">Create new</a>
{% endblock %}
