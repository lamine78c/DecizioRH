{% extends 'base.html.twig' %}

{% block title %}Entity{% endblock %}

{% block body %}
    <h1>Entity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Shortcut</th>
                <td>{{ entity.shortcut }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>StartAt</th>
                <td>{{ entity.startAt ? entity.startAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ entity.createdAt ? entity.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ entity.updatedAt ? entity.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ClosedAt</th>
                <td>{{ entity.closedAt ? entity.closedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('entity_index') }}">back to list</a>

    <a href="{{ path('entity_edit', {'id': entity.id}) }}">edit</a>

    {{ include('entity/_delete_form.html.twig') }}
{% endblock %}
