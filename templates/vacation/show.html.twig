    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vacation.id }}</td>
            </tr>
            <tr>
                <th>Period</th>
                <td>{{ vacation.period ? vacation.period|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Win</th>
                <td>{{ vacation.win }}</td>
            </tr>
            <tr>
                <th>Spent</th>
                <td>{{ vacation.spent }}</td>
