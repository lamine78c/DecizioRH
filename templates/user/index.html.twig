{% extends 'base.html.twig' %}

{% block title %}Liste des Salariés{% endblock %}

{% block body %}
<div class="container-fluid">
    <section class="card card-primary">
        <div class="card-header">
            <div>
                <a class="btn btn-warning float-right" href="{{ path('app_register') }}"> <i class="fas fa-user-edit" aria-hidden="true"></i>
                    Ajouter un nouveau salarié</a>
            </div>
        </div>
        <div class="table-responsive">
        <div class="font-weight-bold m-1">
            Le nombre total de salariés : {{ users.getTotalItemCount }}
        </div>
        <table id="listUser" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead class="bg-info p-1 text-white">
                <tr>
                    <th class="th-sm">Nom</th>
                    <th class="th-sm">Prenom</th>
                    <th class="th-sm">Matricule</th>
                    <th class="th-sm">N° de Téléphone</th>
                    <th class="th-sm">Email</th>
                    <th class="th-sm">Identifiant</th>
                    <th class="th-sm">Département</th>
                    <th class="th-sm">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.matricule }}</td>
                    <td>{{ user.phone1 }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.entity.name }}</td>
                    <td>
                        <a class="btn btn-info" href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i></a>
                        <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit"></i></a>
                        {{ include('user/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
        <div class="navigation ml-1">{{ knp_pagination_render(users) }}</div>
    </section>
</div>
{% endblock %}
