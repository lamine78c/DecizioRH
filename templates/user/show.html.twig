{% extends 'base.html.twig' %}

{% block title %}Profil Salarié{% endblock %}

{% block body %}
    <div class="container-fluid">

                <div class="row">
                    <div class="col-md-4">
                        <section class="card">
                        <h1><i class="fas fa-user"></i> Informations Personnelles</h1>
                        <div>
                            Nom : {{ user.prenom }} {{ user.nom }}
                        </div>
                        <div>
                            Matricule : {{ user.matricule }}
                        </div>
                        <div>
                            Adresse mail : {{ user.email }}
                        </div>
                        <div>
                            Date de naissance : {{ user.dateNaissance ? user.dateNaissance|date('d-m-Y') : '' }}
                        </div>
                        <div>
                            Date d'entrée : <span>{{ user.createdAt ? user.createdAt|date('d-m-Y') : '' }}</span>
                        </div>
                        <div>
                            <a class="btn btn-warning float-right" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit"></i> Modifier</a>
                        </div>
                        </section>
                    </div>
                    <div class="col-md-4">
                        <section class="card">
                            <h1>Contact</h1>
                        </section>
                    </div>
                    <div class="col-md-4">
                        <section class="card">
                            <h1>Informations Professionnelles</h1>
                        </section>
                    </div>
                </div>

    </div>
{% endblock %}
