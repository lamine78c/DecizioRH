<form class="delete-btn" method="post" action="{{ path('address_delete', {'id': address.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cette adresse ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ address.id) }}">
    <button class="btn btn-danger float-right m-1"><i class="fa fa-trash-o"></i></button>
</form>
