{% extends 'baseBack.html.twig' %}

{% block title %}Ajout d'un nouveau salarié{% endblock %}

{% block body %}
    <h3><i class="fas fa-user-edit fa-2x"></i> Ajout d'un nouveau salarié</h3>
    <div class="row">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="col-md-6">
            <section class="panel">
                <div class="panel-body">
                    <div class="form-group">
                        {{ form_label(form.firstname, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        {{ form_errors(form.firstname) }}

                        <div class="col-sm-8">
                            {# Génération de l'input. #}
                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.lastname, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        {{ form_errors(form.lastname) }}

                        <div class="col-sm-8">
                            {# Génération de l'input. #}
                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.matricule, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        {{ form_errors(form.matricule) }}

                        <div class="col-sm-8">
                            {# Génération de l'input. #}
                            {{ form_widget(form.matricule, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        {{ form_errors(form.email) }}

                        <div class="col-sm-8">
                            {# Génération de l'input. #}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.username, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        {{ form_errors(form.username) }}

                        <div class="col-sm-8">
                            {# Génération de l'input. #}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="col-md-6">
            <section class="panel">
                <div class="panel-body">
                    <div class="form-group">
                        {{ form_label(form.entity, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        {{ form_errors(form.entity) }}

                        <div class="col-sm-8">
                            {# Génération de l'input. #}
                            {{ form_widget(form.entity, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        {{ form_errors(form.password) }}

                        <div class="col-sm-8">
                            {# Génération de l'input. #}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.roles, null, {'label_attr': {'class': 'col-sm-4 control-label checkbox-inline'}}) }}
                        {{ form_errors(form.roles) }}

                        <div class="col-sm-8">
                            {# Génération de l'input. #}
                            {{ form_widget(form.roles, {'attr': {'class': 'form-control form-check-inline'}}) }}
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <button class="btn btn-primary">
                        <i class="fa fa-check-square" aria-hidden="true"></i>
                        {{ button_label|default('Enregistrer') }}
                    </button>
                    <button type="reset" class="btn btn-warning">
                        <i class="fa fa-circle-o-notch" aria-hidden="true"></i>
                        Annuler
                    </button>
                </footer>
            </section>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

